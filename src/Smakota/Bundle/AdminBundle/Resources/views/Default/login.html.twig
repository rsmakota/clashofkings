{% extends 'SmakotaAdminBundle::layout.html.twig' %}

{% block body %}
    <form action="{{ path('login_check') }}" method="post" id="login">
        <input type="hidden" name="_target_path" value="/account" />
        <table>
            <tr>
                <td><label for="username">Username:</label></td><td><input type="text" id="username" name="_username" value="" /></td>
            </tr>
            <tr>
                <td><label for="password">Password:</label></td><td><input type="password" id="password" name="_password" /></td>
            </tr>
            <tr align="center">
                <td colspan="2"><button type="submit">Login</button></td>
            </tr>
        </table>
        {% if error %}
            <div style="margin: 0 auto; padding: 20px 0; text-align: center; width: 90%;">
                <p class="error" style="line-height: normal; font-size: 45px;">
                    {#{{ error.message|trans({}, 'validators')|raw }}#}
                    {{ error.message }}
                </p>
            </div>
        {% endif %}
    </form>
{% endblock %}
